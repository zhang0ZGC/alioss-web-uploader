{
  "compilerOptions": {
    "module": "ESNext",
    //      "module": "es6",
    "target": "es5",
    //  "strict": true,
    "sourceMap": true,
    "locale": "zh-CN",
    "outDir": "./dist",
    // moduleResolution:node:`folder/index` can short to `folder`
    "moduleResolution": "node",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "declaration": true,
    // "removeComments": true,
    "declarationDir": "./types"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}
